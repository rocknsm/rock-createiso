[main]
keepcache=1
debuglevel=2
reposdir=/dev/null
logfile=./yum.log
retries=20
obsoletes=1
gpgcheck=0
repo_gpgcheck=0
assumeyes=1
syslog_ident=mock
syslog_device=
mdpolicy=group:primary
plugins=1
best=1
strict=0

# repos
[epel]
name=epel
#mirrorlist=http://mirrors.fedoraproject.org/mirrorlist?repo=epel-7&arch=x86_64
baseurl={{ yum_epel_url }}
failovermethod=priority
gpgkey=file:///usr/share/distribution-gpg-keys/epel/RPM-GPG-KEY-EPEL-7
gpgcheck=0
enabled=1

[rocknsm_2_2]
name=rocknsm_2_2
baseurl={{ yum_rocknsm_2_url }}
repo_gpgcheck=0
gpgcheck=0
enabled=1
gpgkey=https://packagecloud.io/rocknsm/2_2/gpgkey
sslverify=1
sslcacert=/etc/pki/tls/certs/ca-bundle.crt
metadata_expire=300

[group_rocknsm-testing]
name=Copr repo for testing owned by @rocknsm
baseurl="{{ yum_rocknsm_testing_url }}"
type=rpm-md
skip_if_unavailable=True
gpgcheck=1
gpgkey=https://copr-be.cloud.fedoraproject.org/results/@rocknsm/testing/pubkey.gpg
repo_gpgcheck=0
enabled={{ yum_rocknsm_testing_enabled }}
enabled_metadata=1

[elastic-6.x]
name=Elastic repository for 6.x packages
baseurl="{{ yum_elastic_6_url }}"
gpgcheck=0
gpgkey=https://artifacts.elastic.co/GPG-KEY-elasticsearch
enabled=1
type=rpm-md
